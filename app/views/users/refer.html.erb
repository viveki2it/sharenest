  <section>
    <div class="volunteer">
      <h1 class="text-center mb-0"><strong>#volunteermatters</strong></h1>
        <h2 class="text-center">Share, Help and Win</h2>
        <div class="container">
          <div class="share"><p class="share-code">Your code:  <strong class="ml-2">?ref=<%= @user.referral_code %></strong></p></div>
          <%= render "/users/invite_friends" %>
        </div>
        <div class="container">
          <%
            words = ''
            referrals_count = @user.referrals.count
            if referrals_count == 1
              words = 'friend has'
            elsif
              words = 'friends have'
            end
          %>
          <div class="share">
            <% if referrals_count == 0 %>
              <p class="share-code"><strong class="ml-2">No friends have joined...Yet!</strong></p>
            <% else %>
              <p class="share-code"><strong class="ml-2"><%= referrals_count %> <%= words %> joined</strong></p>
